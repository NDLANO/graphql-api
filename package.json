{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && eslint . --ext src",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "ts-node ./scripts/generateTypeScriptTypesFromSchema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"nodemon build/server.js | bunyan\"",
    "start-with-local-converter": "LOCAL_CONVERTER=true yarn start",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "dependencies": {
    "apollo-server-express": "^2.0.0",
    "bunyan": "^1.8.12",
    "dataloader": "^1.4.0",
    "express": "^4.16.3",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.5",
    "lodash": "^4.17.10",
    "lru-cache": "^4.1.3",
    "node-fetch": "^2.2.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/graphql": "^0.13.3",
    "@types/jest": "^23.3.0",
    "@types/lodash": "^4.14.113",
    "@types/lru-cache": "^4.1.1",
    "@types/node": "^10.5.2",
    "@types/node-fetch": "^2.1.2",
    "chalk": "^2.4.1",
    "concurrently": "^3.6.0",
    "eslint": "^4.18.2",
    "graphql-schema-typescript": "^1.2.2",
    "jest": "^23.4.1",
    "nodemon": "^1.18.3",
    "prettier": "^1.13.7",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^16.0.1"
  }
}
