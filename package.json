{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "Ndla GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn run lint-prettier && eslint . --ext src",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "ts-node ./scripts/generateTypeScriptTypesFromSchema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"nodemon build/server.js | bunyan\"",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "dataloader": "^1.4.0",
    "express": "^4.16.3",
    "graphql": "^0.13.1",
    "graphql-tools": "^2.22.0",
    "lodash": "^4.17.5",
    "node-fetch": "^2.1.1"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.4",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/graphql": "^0.13.0",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.106",
    "@types/node": "^9.6.2",
    "@types/node-fetch": "^1.6.8",
    "chalk": "^2.3.2",
    "concurrently": "^3.5.1",
    "eslint": "^4.18.2",
    "graphql-schema-typescript": "^1.0.24",
    "jest": "^22.4.3",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^14.0.0"
  }
}
