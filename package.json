{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "yarn build-ts",
    "build-ts": "tsc",
    "ncc": "ncc build src/server.ts -o build",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && yarn lint-es",
    "lint-es": "eslint --cache --cache-location '.eslintcache/' --max-warnings=0 src",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "graphql-codegen --config local-codegen.yml && prettier --write src/types/schema.d.ts src/schema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"node --watch build/server.js\"",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "vitest --run",
    "tdd": "vitest"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@as-integrations/express5": "^1.1.2",
    "@googleapis/youtube": "^24.0.0",
    "@graphql-tools/schema": "^10.0.31",
    "@ndla/licenses": "^9.0.3",
    "cheerio": "^1.1.0",
    "compression": "^1.8.1",
    "dataloader": "^1.4.0",
    "express": "^5.2.1",
    "express-prom-bundle": "^8.0.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-tag": "^2.12.6",
    "he": "^1.2.0",
    "ip-cidr": "^4.0.2",
    "lodash": "^4.17.21",
    "lru-cache": "^7.0.0",
    "marked": "^17.0.1",
    "node-fetch": "2.6.7",
    "open-graph-scraper": "^6.11.0",
    "openapi-fetch": "^0.15.0",
    "prismjs": "^1.30.0",
    "prom-client": "^15.1.3",
    "punycode": "^2.3.1",
    "sanitize-html": "^2.17.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-resolvers": "^5.1.5",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@graphql-tools/mock": "^9.1.5",
    "@ndla/types-backend": "^1.0.89",
    "@ndla/types-embed": "^5.0.19-alpha.0",
    "@ndla/types-taxonomy": "^1.0.41",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/graphql": "^14.5.0",
    "@types/he": "^1.1.1",
    "@types/lodash": "^4.14.118",
    "@types/node": "^22.15.0",
    "@types/node-fetch": "^2.1.2",
    "@types/open-graph-scraper": "^5.2.3",
    "@types/prismjs": "^1.26.0",
    "@types/punycode": "^2.1.4",
    "@types/sanitize-html": "^2.11.0",
    "@types/source-map-support": "^0",
    "@vercel/ncc": "^0.38.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-ndla": "^6.0.11-alpha.0",
    "prettier": "^3.8.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.17"
  },
  "packageManager": "yarn@4.9.2"
}
