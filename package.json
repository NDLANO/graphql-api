{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "yarn build-ts",
    "build-ts": "tsc && tsc-strict",
    "ncc": "ncc build src/server.ts -o build",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && yarn lint-es",
    "lint-es": "eslint --cache --cache-location '.eslintcache/' --ext .js,.jsx,.ts,.tsx --max-warnings=0 src",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "graphql-codegen --config local-codegen.yml && prettier --write src/types/schema.d.ts src/schema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"nodemon --inspect=9228 build/server.js | bunyan\"",
    "start-with-local-converter": "LOCAL_CONVERTER=true yarn start",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "resolutions": {
    "@types/serve-static": "1.13.10"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@graphql-tools/mock": "^8.7.10",
    "@graphql-tools/schema": "^9.0.8",
    "@ndla/licenses": "^7.0.0",
    "bunyan": "^1.8.12",
    "cheerio": "^1.0.0-rc.6",
    "compression": "^1.7.4",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.20.0",
    "graphql-tag": "^2.12.6",
    "he": "^1.2.0",
    "lodash": "^4.17.21",
    "lru-cache": "^4.1.3",
    "node-fetch": "2.6.7",
    "query-string": "^6.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.11",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typescript": "^2.8.1",
    "@graphql-codegen/typescript-operations": "^2.5.6",
    "@graphql-codegen/typescript-resolvers": "^2.7.6",
    "@graphql-eslint/eslint-plugin": "^3.12.0",
    "@ndla/types-article-api": "^0.0.8",
    "@ndla/types-audio-api": "^0.0.12",
    "@ndla/types-concept-api": "^0.0.10",
    "@ndla/types-embed": "^0.1.4",
    "@ndla/types-frontpage-api": "^0.0.4",
    "@ndla/types-image-api": "^0.0.10",
    "@ndla/types-learningpath-api": "^0.0.19",
    "@ndla/types-search-api": "^0.0.6",
    "@types/bunyan": "^1.8.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.15",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/graphql": "^14.5.0",
    "@types/he": "^1.1.1",
    "@types/jest": "^29.0.2",
    "@types/lodash": "^4.14.118",
    "@types/lru-cache": "^4.1.1",
    "@types/node": "^18.11.15",
    "@types/node-fetch": "^2.1.2",
    "@types/query-string": "^6.1.1",
    "@types/serve-static": "1.13.10",
    "@vercel/ncc": "^0.34.0",
    "chalk": "^2.4.1",
    "concurrently": "^4.0.1",
    "eslint": "^7.32.0",
    "eslint-config-ndla": "^2.0.3",
    "jest": "^29.0.3",
    "nodemon": "^1.18.6",
    "prettier": "^1.19.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^4.9.3",
    "typescript-strict-plugin": "^2.0.1",
    "yarn-deduplicate": "^6.0.1"
  }
}
