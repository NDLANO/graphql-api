{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "yarn build-ts",
    "build-ts": "tsc",
    "ncc": "ncc build src/server.ts -o build",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && yarn lint-ts",
    "lint-ts": "tslint --project . --format stylish",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "ts-node ./scripts/generateTypeScriptTypesFromSchema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"nodemon build/server.js | bunyan\"",
    "start-with-local-converter": "LOCAL_CONVERTER=true yarn start",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "dependencies": {
    "apollo-server-express": "^2.2.1",
    "bunyan": "^1.8.12",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-tools": "^4.0.3",
    "lodash": "^4.17.13",
    "lru-cache": "^4.1.3",
    "node-fetch": "^2.3.0",
    "query-string": "^6.2.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.5",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/lru-cache": "^4.1.1",
    "@types/node": "^10.12.6",
    "@types/node-fetch": "^2.1.2",
    "@types/query-string": "^6.1.1",
    "@zeit/ncc": "^0.8.1",
    "chalk": "^2.4.1",
    "concurrently": "^4.0.1",
    "graphql-schema-typescript": "^1.2.8",
    "jest": "^23.6.0",
    "nodemon": "^1.18.6",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.1.6"
  }
}
