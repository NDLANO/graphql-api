{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "Ndla GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "eslint . --ext src",
    "watch-node": "nodemon build/server.js",
    "build": "npm run build-ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
    "start-prod": "node ./build/server.js"
  },
  "dependencies": {
    "apollo-server-express": "^1.3.2",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dataloader": "^1.4.0",
    "express": "^4.16.3",
    "graphql": "^0.13.1",
    "graphql-tools": "^2.22.0",
    "node-fetch": "^2.1.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/node": "^9.6.2",
    "@types/node-fetch": "^1.6.8",
    "concurrently": "^3.5.1",
    "eslint": "^4.18.2",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^14.0.0"
  }
}
