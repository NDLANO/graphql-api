{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "yarn build-ts",
    "build-ts": "tsc",
    "ncc": "ncc build src/server.ts -o build",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && yarn lint-es",
    "lint-es": "eslint --cache --cache-location '.eslintcache/' --max-warnings=0 src",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "graphql-codegen --config local-codegen.yml && prettier --write src/types/schema.d.ts src/schema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"node --watch build/server.js\"",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "vitest --run",
    "tdd": "vitest"
  },
  "engines": {
    "node": ">=20.19.1"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@googleapis/youtube": "^24.0.0",
    "@graphql-tools/schema": "^10.0.23",
    "@ndla/licenses": "^9.0.0",
    "cheerio": "^1.1.0",
    "compression": "^1.8.0",
    "dataloader": "^2.2.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-prom-bundle": "^7.0.0",
    "graphql": "^16.11.0",
    "graphql-scalars": "^1.24.2",
    "graphql-tag": "^2.12.6",
    "he": "^1.2.0",
    "lodash": "^4.17.21",
    "lru-cache": "^7.0.0",
    "marked": "^9.1.0",
    "node-fetch": "2.7.0",
    "open-graph-scraper": "^6.10.0",
    "openapi-fetch": "^0.13.5",
    "prismjs": "^1.30.0",
    "prom-client": "^15.1.3",
    "punycode": "^2.3.1",
    "query-string": "^9.2.1",
    "sanitize-html": "^2.17.0",
    "source-map-support": "^0.5.21",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-resolvers": "^4.5.1",
    "@graphql-eslint/eslint-plugin": "^4.4.0",
    "@graphql-tools/mock": "^9.0.23",
    "@ndla/types-backend": "^1.0.39",
    "@ndla/types-embed": "^5.0.13-alpha.0",
    "@ndla/types-taxonomy": "^1.0.34",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^4.17.21",
    "@types/graphql": "^14.2.3",
    "@types/he": "^1.1.1",
    "@types/lodash": "^4.14.118",
    "@types/node": "^22.15.0",
    "@types/node-fetch": "^2.6.12",
    "@types/open-graph-scraper": "^4.8.5",
    "@types/prismjs": "^1.26.0",
    "@types/punycode": "^2.1.4",
    "@types/query-string": "^6.3.0",
    "@types/sanitize-html": "^2.16.0",
    "@types/source-map-support": "^0",
    "@vercel/ncc": "^0.34.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.16.0",
    "eslint-config-ndla": "^6.0.0-alpha.0",
    "prettier": "^3.1.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^3.2.3"
  },
  "packageManager": "yarn@4.9.2"
}
