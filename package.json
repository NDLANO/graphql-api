{
  "name": "ndla-graphql-api",
  "version": "1.0.0",
  "description": "NDLA GraphQL server",
  "main": "src/server.js",
  "author": "ndla@knowit.no",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "build": "yarn build-ts",
    "build-ts": "tsc",
    "ncc": "ncc build src/server.ts -o build",
    "check-all": "yarn lint && yarn build-ts && yarn test",
    "lint": "yarn lint-prettier && yarn lint-ts",
    "lint-ts": "tslint --project . --format stylish",
    "lint-prettier": "prettier --l \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "generate-schema-types": "ts-node ./scripts/generateTypeScriptTypesFromSchema.ts",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\"  \"tsc -w\" \"nodemon --inspect=9228 build/server.js | bunyan\"",
    "start-with-local-converter": "LOCAL_CONVERTER=true yarn start",
    "start-prod": "NODE_ENV=production node ./build/server.js",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "resolutions": {
    "@types/serve-static": "1.13.10"
  },
  "dependencies": {
    "@graphql-tools/mock": "^8.2.2",
    "@graphql-tools/schema": "^8.1.2",
    "apollo-server-express": "^3.1.2",
    "bunyan": "^1.8.12",
    "cheerio": "^1.0.0-rc.6",
    "compression": "^1.7.4",
    "dataloader": "^1.4.0",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.1",
    "graphql-scalars": "^1.10.0",
    "he": "^1.2.0",
    "lodash": "^4.17.21",
    "lru-cache": "^4.1.3",
    "node-fetch": "2.6.7",
    "query-string": "^6.2.0"
  },
  "devDependencies": {
    "@ndla/types-audio-api": "0.0.10",
    "@ndla/types-article-api": "^0.0.4",
    "@ndla/types-concept-api": "^0.0.9",
    "@ndla/types-frontpage-api": "^0.0.3",
    "@ndla/types-learningpath-api": "^0.0.2",
    "@types/bunyan": "^1.8.5",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.17.13",
    "@types/express-serve-static-core": "^4.17.24",
    "@types/graphql": "^14.5.0",
    "@types/he": "^1.1.1",
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.118",
    "@types/lru-cache": "^4.1.1",
    "@types/nock": "11.1.0",
    "@types/node": "^14.0.27",
    "@types/node-fetch": "^2.1.2",
    "@types/query-string": "^6.1.1",
    "@types/serve-static": "1.13.10",
    "@zeit/ncc": "^0.22.3",
    "chalk": "^2.4.1",
    "concurrently": "^4.0.1",
    "graphql-schema-typescript": "^1.5.2",
    "jest": "^23.6.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.6",
    "prettier": "^1.19.1",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "typescript": "^3.8.3"
  }
}
