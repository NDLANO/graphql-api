{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "strict": true,
    "lib": ["es2020", "esnext.asynciterable", "DOM"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*-test.ts"
  ],
  "preset": "ts-jest"
}
